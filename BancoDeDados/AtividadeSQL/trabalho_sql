Questão 05. 

INSERT ALL
   
  INTO CATEGORIAS (ID_CATEGORIAS, CATEGORIA) VALUES (1, 'Papelaria')
  INTO CATEGORIAS (ID_CATEGORIAS, CATEGORIA) VALUES (2, 'Informática')
  INTO CATEGORIAS (ID_CATEGORIAS, CATEGORIA) VALUES (3, 'Alimentação')

   
SELECT 1 FROM DUAL;

INSERT ALL

   	INTO PRODUTO (CATEGORIA_PRODUTO, NOME_PRODUTO,VALOR_PRODUTO) VALUES (1, 'Caneta', 1.00)
	INTO PRODUTO (CATEGORIA_PRODUTO, NOME_PRODUTO,VALOR_PRODUTO) VALUES (1, 'Caderno', 10.00)
	INTO PRODUTO (CATEGORIA_PRODUTO, NOME_PRODUTO,VALOR_PRODUTO) VALUES (2, 'Pendriver', 20.00)
	INTO PRODUTO (CATEGORIA_PRODUTO, NOME_PRODUTO,VALOR_PRODUTO) VALUES (2, 'Mouse', 35.50)
	INTO PRODUTO (CATEGORIA_PRODUTO, NOME_PRODUTO,VALOR_PRODUTO) VALUES (3, 'Leite', 5.80)
	
SELECT 1 FROM DUAL;


